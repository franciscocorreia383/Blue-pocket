<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="4dp"
    android:clickable="true"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_card"
        android:elevation="2dp"
        android:padding="8dp"
        android:backgroundTint="#ffff"
        android:layout_margin="8dp"
        >

        <View
            android:id="@+id/view_color"
            android:layout_width="3dp"
            android:layout_height="0dp"

            android:background="#000"

            app:layout_constraintBottom_toBottomOf="@id/item_recycleview_value"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/item_recycleview_name" />

        <TextView
            android:id="@+id/item_recycleview_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:text="NOME"

            android:layout_marginLeft="10dp"

            android:textSize="20sp"
            app:layout_constraintLeft_toRightOf="@id/view_color"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_recycleview_movimentacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:text="MOVIMENTAÇÃO"

            android:textSize="20sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_recycleview_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:text="Type"

            android:textSize="20sp"

            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@id/view_color"
            app:layout_constraintTop_toBottomOf="@id/item_recycleview_name" />

        <TextView
            android:id="@+id/item_recycleview_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:text="Date"

            android:textSize="20sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_recycleview_name" />

        <TextView
            android:id="@+id/item_recycleview_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:text="Valor"

            android:textSize="20sp"

            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@id/view_color"
            app:layout_constraintTop_toBottomOf="@id/item_recycleview_type" />

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"

            android:layout_margin="10dp"

            android:background="#000"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_recycleview_value" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>